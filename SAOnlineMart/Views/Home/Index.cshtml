@{
    ViewData["Title"] = "Home Page";
}

<style>
 
    body {
        background: url('/images/SouthAfricanFlag.jpeg') no-repeat center center fixed;
        background-size: cover;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
        background-color: rgba(0, 0, 0, 0.7);
        padding: 50px;
        color: white; 
    }

    .jumbotron {
        background-color: transparent !important;
    }

        .jumbotron .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
</style>

<!-- Background Overlay -->
<div class="background-overlay"></div>

<!-- Page Content -->
<div class="content-wrapper">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to SAOnlineMart!</h1>
        <p class="lead">Your one-stop shop for all your online shopping needs.</p>
        <hr class="my-4">
        <p>Browse our wide selection of products, or login to view your profile.</p>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Shop")" role="button">Start Shopping</a>
    </div>

    <div class="jumbotron mt-4">
        <h1 class="display-4">Become a Part of Our Community!</h1>
        <p class="lead">Join us today and start enjoying exclusive benefits.</p>
        <hr class="my-4">
        <p>Sign up now to join in and start selling.</p>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "AdminUser")" role="button">Join In</a>
    </div>
</div>
