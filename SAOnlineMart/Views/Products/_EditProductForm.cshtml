@model SAOnlineMart.Models.DataModels.Product

<form id="editProductForm" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" style="color: black;" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" style="color: black;">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" style="color: black;" />
    </div>
    <div class="form-group">
        <label for="ProductImage">Product Image</label>
        <input type="file" class="form-control-file" id="ProductImage" name="ProductImage"  />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="Product Image" style="max-height: 150px; margin-top: 10px;" />
        }
    </div>
    <input type="hidden" name="ProductId" value="@Model.ProductId" style="color: black;" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
