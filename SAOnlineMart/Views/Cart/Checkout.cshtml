@model IEnumerable<SAOnlineMart.Models.DataModels.CartItem>


<style>

    body {
        background: url('/images/SouthAfricanFlag.jpeg') no-repeat center center fixed;
        background-size: cover;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
        background-color: rgba(0, 0, 0, 0.7);
        padding: 50px;
        color: white; 
    }

  
        .content-wrapper label,
        .content-wrapper th {
            color: white;
        }

  
        .content-wrapper td {
            color: white;
        }

        
        .content-wrapper input.form-control {
            color: black;
            background-color: white;
        }


    .btn-primary, .btn-success {
        color: white;
    }
</style>

<!-- Background Overlay -->
<div class="background-overlay"></div>

<!-- Page Content -->
<div class="content-wrapper">
<div class="container">
    <h2>Checkout</h2>

    <!-- Shopping Cart Summary -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <h4>Total: @Model.Sum(i => i.TotalPrice).ToString("C")</h4>
    </div>

    <!-- Checkout Form -->
    <form asp-action="PlaceOrder" method="post">
        <h3>Shipping Address</h3>
        <div class="form-group">
            <label for="FullName">Full Name</label>
            <input type="text" class="form-control" id="FullName" name="FullName" required>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" required>
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input type="text" class="form-control" id="City" name="City" required>
        </div>
        <div class="form-group">
            <label for="PostalCode">Postal Code</label>
            <input type="text" class="form-control" id="PostalCode" name="PostalCode" required>
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            <input type="text" class="form-control" id="Country" name="Country" required>
        </div>

        <h3>Payment Information</h3>
        <div class="form-group">
            <label for="CardName">Name on Card</label>
            <input type="text" class="form-control" id="CardName" name="CardName" required>
        </div>
        <div class="form-group">
            <label for="CardNumber">Card Number</label>
            <input type="text" class="form-control" id="CardNumber" name="CardNumber" required>
        </div>
        <div class="form-group">
            <label for="ExpiryDate">Expiry Date</label>
            <input type="text" class="form-control" id="ExpiryDate" name="ExpiryDate" placeholder="MM/YY" required>
        </div>
        <div class="form-group">
            <label for="CVV">CVV</label>
            <input type="text" class="form-control" id="CVV" name="CVV" required>
        </div>

        <div class="text-right">
            <a href="@Url.Action("Index", "Shop")" class="btn btn-primary">Back to Shopping</a>
            <button type="submit" class="btn btn-success">Place Order</button>
        </div>
    </form>
</div>
</<div>
</div>
