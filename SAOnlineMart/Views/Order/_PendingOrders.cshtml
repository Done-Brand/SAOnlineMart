@model IEnumerable<SAOnlineMart.Models.DataModels.Order>

<style>
  
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        color: white;
    }

    th {
        background-color: rgba(255, 255, 255, 0.2);
    }

    td {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .btn-ship {
        color: white;
        background-color: #28a745;
        border: none;
        padding: 8px 16px;
        cursor: pointer;
        text-decoration: none;
        border-radius: 4px;
    }

        .btn-ship:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <h3>Pending Orders</h3>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.FullName</td>
                    <td>@order.Address</td>
                    <td>@order.City</td>
                    <td>@order.PostalCode</td>
                    <td>@order.Country</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <form method="post" asp-action="ShipOrder" asp-controller="Order">
                            <input type="hidden" name="orderId" value="@order.OrderId" />
                            <button type="submit" class="btn-ship">Ship</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
